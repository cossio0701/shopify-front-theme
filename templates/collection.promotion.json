/*
 * PROMOTION COLLECTION TEMPLATE
 * 
 * This template is designed for promotional campaigns such as:
 * - Sale (Venta)
 * - Click Deals
 * - Rebajas (Discounts)
 * - Limited Offers
 * - Flash Sales
 * 
 * To use this template:
 * 1. Create a new collection in Shopify Admin
 * 2. Assign this template: collection.promotion.json
 * 3. Customize settings in Admin without touching code
 * 
 * Features:
 * - Enhanced hero banner for promotion visibility
 * - Responsive product grid with view toggle
 * - Customizable promotion badge/CTA
 * - Built-in SEO content section
 * -------------------------------------------------------
 */
{
  "sections": {
    "promotion_banner": {
      "type": "full-width-banner",
      "blocks": {
        "breadcrumbs": {
          "type": "breadcrumbs",
          "settings": {
            "show_on": "both"
          }
        },
        "promotion_heading": {
          "type": "heading",
          "settings": {
            "heading": "{{ collection.title }}",
            "heading_size": "h1"
          }
        },
        "promotion_description": {
          "type": "content",
          "settings": {
            "content": "{{ collection.description }}"
          }
        }
      },
      "block_order": [
        "breadcrumbs",
        "promotion_heading",
        "promotion_description"
      ],
      "settings": {
        "enable_transparent_header": false,
        "media_position": "background",
        "section_height": "medium",
        "content_position": "center",
        "content_alignment": "center",
        "video_external": "",
        "show_controls_on_video": false,
        "aspect_ratio": "auto",
        "section_height_mobile": "auto",
        "content_position_mobile": "center",
        "content_alignment_mobile": "center",
        "video_external_mobile": "",
        "show_controls_on_video_mobile": false,
        "aspect_ratio_mobile": "auto",
        "section_width": "max-w-fluid",
        "color_scheme": "scheme-26c6fbd2-00d8-486d-8a53-9dc575d7ab5e",
        "color_scheme_for_content": "scheme-7",
        "spacing_inner": "2",
        "spacing_top": "0",
        "spacing_bottom": "1"
      }
    },
    "promotion_info_bar": {
      "type": "custom-liquid",
      "disabled": true,
      "settings": {
        "custom_liquid": "<!-- Add custom promotion messaging or countdown timer here -->",
        "color_scheme": "scheme-7",
        "spacing_top": "1",
        "spacing_bottom": "1"
      }
    },
    "main_products": {
      "type": "main-collection",
      "settings": {
        "show_top_border_for_utilities_bar": false,
        "enable_products_count": true,
        "enable_sorting": true,
        "enable_opened_accordions": false,
        "filters": "drawer",
        "enable_view_toggle": true,
        "products_per_row": "3",
        "products_per_row_mobile": "2",
        "products_per_page": 39,
        "pagination_style": "default",
        "enable_infinity_scroll": false,
        "section_width": "max-w-page",
        "color_scheme": "",
        "spacing_top": "2",
        "spacing_bottom": "2"
      }
    },
    "promotion_seo_content": {
      "type": "seo-content",
      "settings": {
        "section_layout": "normal",
        "heading": "About {{ collection.title }}",
        "heading_size": "h5",
        "text": "{{ collection.metafields.custom.seo | metafield_tag }}",
        "text_size_mobile": 14,
        "text_size_tablet": 15,
        "text_size_desktop": 16,
        "text_size_unit": "px",
        "content_alignment": "center",
        "custom_background_color": "",
        "custom_text_color": "",
        "section_width": "max-w-page",
        "color_scheme": "scheme-7",
        "spacing_inner": "2",
        "spacing_top": "2",
        "spacing_bottom": "2"
      }
    },
    "related_products": {
      "type": "product-recommendations",
      "disabled": true,
      "settings": {
        "heading": "You might also like",
        "heading_size": "h5",
        "products_to_display": 4,
        "columns_desktop": 4,
        "color_scheme": "scheme-7",
        "image_ratio": "adapt",
        "image_ratio_mobile": "adapt",
        "spacing_top": "2",
        "spacing_bottom": "2"
      }
    },
    "apps": {
      "type": "apps",
      "settings": {}
    }
  },
  "order": [
    "promotion_banner",
    "promotion_info_bar",
    "main_products",
    "promotion_seo_content",
    "related_products",
    "apps"
  ]
}
