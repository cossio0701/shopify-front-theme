{
  "sections": {
    "breadcrumbs": {
      "type": "breadcrumbs",
      "settings": {
        "alignment": "left",
        "color_scheme": "background-1",
        "section_width": "wrapper",
        "spacing_top": 1,
        "spacing_bottom": 1
      }
    },
    "page_title": {
      "type": "page-title",
      "settings": {
        "title": "{{ collection.title }}",
        "heading_tag": "h1",
        "heading_size": "h0",
        "alignment": "left",
        "bold": true,
        "uppercase": false,
        "color_scheme": "background-1",
        "section_width": "wrapper",
        "spacing_top": 1,
        "spacing_bottom": 2
      }
    },
    "main_products": {
      "type": "main-collection",
      "settings": {
        "show_top_border_for_utilities_bar": false,
        "enable_products_count": true,
        "enable_sorting": true,
        "enable_opened_accordions": false,
        "filters": "drawer",
        "products_per_row": "3",
        "products_per_row_mobile": "2",
        "products_per_page": 39,
        "pagination_style": "default",
        "enable_infinity_scroll": false,
        "section_width": "max-w-page",
        "color_scheme": "",
        "spacing_top": "0",
        "spacing_bottom": "2"
      }
    },
    "promotion_seo_content": {
      "type": "seo-content",
      "settings": {
        "section_layout": "normal",
        "heading": "About {{ collection.title }}",
        "heading_size": "h5",
        "text": "{{ collection.metafields.custom.seo | metafield_tag }}",
        "text_size_mobile": 14,
        "text_size_tablet": 15,
        "text_size_desktop": 16,
        "text_size_unit": "px",
        "content_alignment": "center",
        "custom_background_color": "",
        "custom_text_color": "",
        "section_width": "max-w-page",
        "color_scheme": "scheme-7",
        "spacing_inner": "2",
        "spacing_top": "2",
        "spacing_bottom": "2"
      }
    },
    "apps": {
      "type": "apps",
      "settings": {}
    }
  },
  "order": [
    "breadcrumbs",
    "page_title",
    "main_products",
    "promotion_seo_content",
    "apps"
  ]
}
