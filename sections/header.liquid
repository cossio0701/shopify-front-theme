{%- render 'css', css: 'section-header.css' -%}

{%- liquid
  assign header_classes = ''
  if section.settings.sticky
    assign header_classes = ' is-sticky'
  endif
-%}

{%- style -%}
  /* Desktop Initial State */
  @media screen and (min-width: 990px) {
    #shopify-section-{{ section.id }} .header__inner {
      display: flex;
      position: relative;
      transition: all 0.3s ease;
      padding: {{ section.settings.padding_top_initial }}rem {{ section.settings.padding_horizontal }}rem {{ section.settings.padding_bottom_initial }}rem;
      gap: {{ section.settings.gap_initial }}rem;
      {%- case section.settings.layout_initial -%}
        {%- when 'column-center' -%}
          flex-direction: column;
          align-items: center;
          justify-content: center;
        {%- when 'column-left' -%}
          flex-direction: column;
          align-items: flex-start;
          justify-content: center;
        {%- when 'column-right' -%}
          flex-direction: column;
          align-items: flex-end;
          justify-content: center;
        {%- when 'row-left' -%}
          flex-direction: row;
          align-items: center;
          justify-content: flex-start;
        {%- when 'row-center' -%}
          flex-direction: row;
          align-items: center;
          justify-content: center;
        {%- when 'row-right' -%}
          flex-direction: row;
          align-items: center;
          justify-content: flex-end;
        {%- when 'row-space-between' -%}
          flex-direction: row;
          align-items: center;
          justify-content: space-between;
      {%- endcase -%}
    }

    #shopify-section-{{ section.id }} .header__logo {
      order: {{ section.settings.logo_order_initial }};
      transition: all 0.3s ease;
      {%- if section.settings.layout_initial contains 'column' -%}
        margin-bottom: {{ section.settings.logo_margin_bottom_initial }}rem;
      {%- endif -%}
    }

    #shopify-section-{{ section.id }} .header__navigation {
      order: {{ section.settings.nav_order_initial }};
      transition: all 0.3s ease;
      {%- if section.settings.layout_initial contains 'column' -%}
        width: 100%;
      {%- endif -%}
      {%- if section.settings.nav_position_initial == 'absolute' -%}
        position: absolute;
        {%- case section.settings.nav_alignment_initial -%}
          {%- when 'top-left' -%}
            top: {{ section.settings.nav_offset_top }}rem;
            left: {{ section.settings.nav_offset_horizontal }}rem;
          {%- when 'top-right' -%}
            top: {{ section.settings.nav_offset_top }}rem;
            right: {{ section.settings.nav_offset_horizontal }}rem;
          {%- when 'top-center' -%}
            top: {{ section.settings.nav_offset_top }}rem;
            left: 50%;
            transform: translateX(-50%);
          {%- when 'bottom-left' -%}
            bottom: {{ section.settings.nav_offset_bottom }}rem;
            left: {{ section.settings.nav_offset_horizontal }}rem;
          {%- when 'bottom-right' -%}
            bottom: {{ section.settings.nav_offset_bottom }}rem;
            right: {{ section.settings.nav_offset_horizontal }}rem;
          {%- when 'bottom-center' -%}
            bottom: {{ section.settings.nav_offset_bottom }}rem;
            left: 50%;
            transform: translateX(-50%);
        {%- endcase -%}
      {%- endif -%}
    }

    #shopify-section-{{ section.id }} .header__utils {
      order: {{ section.settings.utils_order_initial }};
      transition: all 0.3s ease;
      {%- if section.settings.utils_position_initial == 'absolute' -%}
        position: absolute;
        {%- case section.settings.utils_alignment_initial -%}
          {%- when 'top-left' -%}
            top: {{ section.settings.utils_offset_top }}rem;
            left: {{ section.settings.utils_offset_horizontal }}rem;
          {%- when 'top-right' -%}
            top: {{ section.settings.utils_offset_top }}rem;
            right: {{ section.settings.utils_offset_horizontal }}rem;
          {%- when 'top-center' -%}
            top: {{ section.settings.utils_offset_top }}rem;
            left: 50%;
            transform: translateX(-50%);
          {%- when 'bottom-left' -%}
            bottom: {{ section.settings.utils_offset_bottom }}rem;
            left: {{ section.settings.utils_offset_horizontal }}rem;
          {%- when 'bottom-right' -%}
            bottom: {{ section.settings.utils_offset_bottom }}rem;
            right: {{ section.settings.utils_offset_horizontal }}rem;
          {%- when 'bottom-center' -%}
            bottom: {{ section.settings.utils_offset_bottom }}rem;
            left: 50%;
            transform: translateX(-50%);
        {%- endcase -%}
      {%- endif -%}
    }

    /* Desktop Scrolled State */
    html.js body.is-scrolled #shopify-section-{{ section.id }} .header__inner {
      padding: {{ section.settings.padding_top_scrolled }}rem {{ section.settings.padding_horizontal }}rem {{ section.settings.padding_bottom_scrolled }}rem;
      gap: {{ section.settings.gap_scrolled }}rem;
      {%- case section.settings.layout_scrolled -%}
        {%- when 'row-left' -%}
          flex-direction: row;
          align-items: center;
          justify-content: flex-start;
        {%- when 'row-center' -%}
          flex-direction: row;
          align-items: center;
          justify-content: center;
        {%- when 'row-right' -%}
          flex-direction: row;
          align-items: center;
          justify-content: flex-end;
        {%- when 'row-space-between' -%}
          flex-direction: row;
          align-items: center;
          justify-content: space-between;
      {%- endcase -%}
    }

    html.js body.is-scrolled #shopify-section-{{ section.id }} .header__logo {
      order: {{ section.settings.logo_order_scrolled }};
      margin-bottom: 0;
      flex-shrink: 0;
    }

    html.js body.is-scrolled #shopify-section-{{ section.id }} .header__navigation {
      order: {{ section.settings.nav_order_scrolled }};
      position: static;
      transform: none;
    }

    html.js body.is-scrolled #shopify-section-{{ section.id }} .header__utils {
      order: {{ section.settings.utils_order_scrolled }};
      position: static;
      transform: none;
    }
  }

  /* Mobile */
  @media screen and (max-width: 989px) {
    #shopify-section-{{ section.id }} .header__inner {
      display: flex;
      padding: {{ section.settings.padding_top_mobile }}rem {{ section.settings.padding_horizontal_mobile }}rem {{ section.settings.padding_bottom_mobile }}rem;
      gap: {{ section.settings.gap_mobile }}rem;
      {%- case section.settings.layout_mobile -%}
        {%- when 'column-center' -%}
          flex-direction: column;
          align-items: center;
          justify-content: center;
        {%- when 'column-left' -%}
          flex-direction: column;
          align-items: flex-start;
        {%- when 'column-right' -%}
          flex-direction: column;
          align-items: flex-end;
        {%- when 'row-left' -%}
          flex-direction: row;
          align-items: center;
          justify-content: flex-start;
        {%- when 'row-center' -%}
          flex-direction: row;
          align-items: center;
          justify-content: center;
        {%- when 'row-right' -%}
          flex-direction: row;
          align-items: center;
          justify-content: flex-end;
        {%- when 'row-space-between' -%}
          flex-direction: row;
          align-items: center;
          justify-content: space-between;
      {%- endcase -%}
    }

    #shopify-section-{{ section.id }} .header__logo {
      order: {{ section.settings.logo_order_mobile }};
    }

    #shopify-section-{{ section.id }} .header__navigation {
      order: {{ section.settings.nav_order_mobile }};
    }

    {%- unless section.settings.show_nav_mobile -%}
      #shopify-section-{{ section.id }} .header__navigation {
        display: none;
      }
    {%- endunless -%}

    #shopify-section-{{ section.id }} .header__utils {
      order: {{ section.settings.utils_order_mobile }};
    }
  }

  /* Sticky */
  {%- if section.settings.sticky -%}
    #shopify-section-{{ section.id }} {
      position: sticky;
      top: 0;
      width: 100%;
      z-index: var(--z-header);
    }
  {%- endif -%}

  /* Logo Sizing */
  .header__logo {
    width: {{ section.settings.logo_width_mobile | divided_by: 10.0 }}rem;
  }

  .header__logo.header__logo-text .h4 {
    font-size: calc(var(--font-heading-scale) * 1.6rem * {{ section.settings.logo_font_size }});
  }

  @media screen and (min-width: 750px) {
    .header__logo {
      width: {{ section.settings.logo_width | divided_by: 10.0 }}rem;
    }
    .header__logo.header__logo-text .h4 {
      font-size: calc(var(--font-heading-scale) * 1.8rem * {{ section.settings.logo_font_size }});
    }
  }

  /* Icons */
  .header__utils-items {
    display: flex;
    align-items: center;
    gap: {{ section.settings.icons_gap }}rem;
    flex-direction: {{ section.settings.icons_direction }};
  }

  /* Cart Badge */
  .cart-count-badge,
  .header__utils-link span.cart-count-badge {
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 100%;
    color: rgb(var(--color-filled-button-text));
    background: rgb(var(--color-filled-button));
    position: absolute;
    bottom: 1.5rem;
    left: 0.2rem;
  }

  /* Navigation Variables */
  #shopify-section-{{ section.id }} {
    --nav-link-color: {{ section.settings.nav_link_color }};
    --nav-link-hover-color: {{ section.settings.nav_link_hover_color }};
    --nav-link-active-color: {{ section.settings.nav_link_active_color }};
    --nav-link-font-size: {{ section.settings.nav_link_font_size }}px;
    --nav-link-font-weight: {{ section.settings.nav_link_font_weight }};
    --nav-link-padding: {{ section.settings.nav_link_padding_vertical }}rem {{ section.settings.nav_link_padding_horizontal }}rem;
    --nav-gap: {{ section.settings.nav_gap }}rem;
    --nav-dropdown-bg: {{ section.settings.nav_dropdown_bg }};
    --nav-dropdown-width: {{ section.settings.nav_dropdown_width }}px;
    --nav-highlight-color: {{ section.settings.nav_highlight_color }};
  }
{%- endstyle -%}

<div id="header" class="header js-header{{ header_classes }} section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="container {{ section.settings.section_width }}">
    <div class="header__inner">

      {%- liquid
        assign header_logo_text_class = ''
        if section.settings.logo_svg_code == blank and section.settings.logo == blank
          assign header_logo_text_class = 'header__logo-text'
        endif
      -%}

      <div class="header__logo {{ header_logo_text_class }}">
        <a href="{{ routes.root_url }}" class="full-unstyled-link">
          {%- if section.settings.logo_svg_code != blank -%}
            {{ section.settings.logo_svg_code }}
          {%- elsif section.settings.logo != blank -%}
            {%- liquid
              assign logo_image_size_double = section.settings.logo_width | times: 2 | at_most: 5760
              assign logo_alt = section.settings.logo.alt | default: shop.name | escape
            -%}
            {{ section.settings.logo
              | image_url: width: section.settings.logo_width
              | image_tag:
                class: 'header__logo-image new',
                width: section.settings.logo.width,
                height: section.settings.logo.height,
                alt: logo_alt,
                preload: true
            }}
            {%- if section.settings.logo_transparent -%}
              {{ section.settings.logo_transparent
                | image_url: width: section.settings.logo_width
                | image_tag:
                  class: 'header__logo-image-transparent new',
                  width: section.settings.logo_transparent.width,
                  height: section.settings.logo_transparent.height,
                  alt: logo_alt,
                  preload: true
              }}
            {%- endif -%}
          {%- else -%}
            <span class="h4">{{ shop.name | escape }}</span>
          {%- endif -%}
        </a>
      </div>

      {%- if section.settings.show_navigation -%}
        <div class="header__navigation">
          {%- render 'header-navigation' -%}
        </div>
      {%- endif -%}

      <nav class="header__utils">
        <ul class="header__utils-items list-unstyled">
          {%- if section.settings.show_search -%}
            <li class="header__utils-item header__utils-item--search header__utils-item--mobile">
              {%- render 'search-drawer', append_id: 'header' -%}
            </li>
          {%- endif -%}

          {%- if section.settings.show_account and shop.customer_accounts_enabled -%}
            <li class="header__utils-item header__utils-item--account">
              <a
                href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                class="header__utils-link text--link"
                title="{%- if customer -%}{{ 'customer.account.label' | t }}{%- else -%}{{ 'theme.actions.log_in' | t }}{%- endif -%}"
              >
                {%- liquid
                  if customer
                    assign icon_text = 'customer.account.label' | t
                  else
                    assign icon_text = 'theme.actions.log_in' | t
                  endif
                  render 'icon', icon_name: 'theme-user', text: icon_text, class: 'header__utils-link--icon'
                -%}
              </a>
            </li>
          {%- endif -%}

          {%- if section.settings.show_cart -%}
            <li class="header__utils-item header__utils-item--cart header__utils-item--mobile">
              <a href="{{ routes.cart_url }}" class="header__utils-link header__utils-link--cart text--link" title="{{ 'cart.label' | t }}" id="cart-counter" data-cart-link>
                {%- render 'cart-counter' -%}
              </a>
            </li>
          {%- endif -%}
        </ul>
      </nav>

    </div>
  </div>
</div>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if section.settings.logo != blank %}
      "logo": {{ section.settings.logo | image_url: width: section.settings.logo.width | prepend: "https:" | json }},
    {% endif %}
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
  {%- assign potential_action_target = request.origin | append: routes.search_url | append: '?q={search_term_string}' -%}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ request.origin | append: page.url | json }}
    }
  </script>
{%- endif -%}

