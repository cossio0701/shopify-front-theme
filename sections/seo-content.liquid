{%- style -%}
  #shopify-section-{{ section.id }} > div  {
    padding-block-start: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_top }});
    padding-block-end: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_bottom }});
  }
  #shopify-section-{{ section.id }} > div .section__heading {
    margin-block-end: calc(var(--section-spacing-unit-size) * 1.5);
  }
  #shopify-section-{{ section.id }} > div > div.gradient {
    padding: calc(var(--spacing-unit-size) * {{ section.settings.spacing_inner }});
    border-radius: var(--card-corner-radius);
  }

  /* Tamaños de texto responsive */
  #shopify-section-{{ section.id }} .rte.custom-text-size,
  #shopify-section-{{ section.id }} .rte.custom-text-size p,
  #shopify-section-{{ section.id }} .rte.custom-text-size span,
  #shopify-section-{{ section.id }} .rte.custom-text-size div,
  #shopify-section-{{ section.id }} .rte.custom-text-size li {
    font-size: {{ section.settings.text_size_mobile | default: 14 }}{{ section.settings.text_size_unit | default: 'px' }};
    line-height: 1.5;
  }
  
  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .rte.custom-text-size,
    #shopify-section-{{ section.id }} .rte.custom-text-size p,
    #shopify-section-{{ section.id }} .rte.custom-text-size span,
    #shopify-section-{{ section.id }} .rte.custom-text-size div,
    #shopify-section-{{ section.id }} .rte.custom-text-size li {
      font-size: {{ section.settings.text_size_tablet | default: 15 }}{{ section.settings.text_size_unit | default: 'px' }};
    }
  }
  
  @media screen and (min-width: 1024px) {
    #shopify-section-{{ section.id }} .rte.custom-text-size,
    #shopify-section-{{ section.id }} .rte.custom-text-size p,
    #shopify-section-{{ section.id }} .rte.custom-text-size span,
    #shopify-section-{{ section.id }} .rte.custom-text-size div,
    #shopify-section-{{ section.id }} .rte.custom-text-size li {
      font-size: {{ section.settings.text_size_desktop | default: 16 }}{{ section.settings.text_size_unit | default: 'px' }};
    }
  }

  /* Colores personalizados */
  {%- if section.settings.custom_background_color != blank -%}
    #shopify-section-{{ section.id }} .seo-content-custom {
      background-color: {{ section.settings.custom_background_color }} !important;
    }
  {%- endif -%}

  {%- if section.settings.custom_text_color != blank -%}
    #shopify-section-{{ section.id }} .seo-content-custom,
    #shopify-section-{{ section.id }} .seo-content-custom .section__heading,
    #shopify-section-{{ section.id }} .seo-content-custom .rte,
    #shopify-section-{{ section.id }} .seo-content-custom .rte p,
    #shopify-section-{{ section.id }} .seo-content-custom .rte h1,
    #shopify-section-{{ section.id }} .seo-content-custom .rte h2,
    #shopify-section-{{ section.id }} .seo-content-custom .rte h3,
    #shopify-section-{{ section.id }} .seo-content-custom .rte h4,
    #shopify-section-{{ section.id }} .seo-content-custom .rte h5,
    #shopify-section-{{ section.id }} .seo-content-custom .rte h6,
    #shopify-section-{{ section.id }} .seo-content-custom .rte li,
    #shopify-section-{{ section.id }} .seo-content-custom .rte span,
    #shopify-section-{{ section.id }} .seo-content-custom .rte div {
      color: {{ section.settings.custom_text_color }} !important;
    }
  {%- endif -%}
{%- endstyle -%}

{%- liquid
  assign has_custom_colors = false
  if section.settings.custom_background_color != blank or section.settings.custom_text_color != blank
    assign has_custom_colors = true
  endif
-%}

<div class="{%- if section.settings.section_layout == 'boxed' -%}container {{ section.settings.section_width }}{%- else -%}{%- unless has_custom_colors -%}color-{{ section.settings.color_scheme }} gradient{%- endunless -%}{%- endif -%}{%- if has_custom_colors -%} seo-content-custom{%- endif -%}">
  <div class="{%- if section.settings.section_layout == 'normal' -%}container {{ section.settings.section_width }}{%- else -%}{%- unless has_custom_colors -%}color-{{ section.settings.color_scheme }} gradient{%- endunless -%}{%- endif -%}{%- if has_custom_colors -%} seo-content-custom{%- endif -%}">
    <div class="seo-content js-animation-fade-in">
      <div class="text-{{ section.settings.content_alignment }}">
        {%- if section.settings.heading != blank -%}
          <h2 class="section__heading {{ section.settings.heading_size }}">
            {{- section.settings.heading -}}
          </h2>
        {%- endif -%}
        <div class="rte custom-text-size">
          {{- section.settings.text -}}
        </div>
      </div>
    </div>
  </div>
</div>

